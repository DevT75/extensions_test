{
  "manifest_version": 3,
  "name": "Runtime Messaging Logger",
  "version": "1.0",
  "description": "Demonstrates runtime messaging and logs messages",
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ]
}
