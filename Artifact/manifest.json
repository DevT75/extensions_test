{
  "manifest_version": 3,
  "name": "Artifact Extension",
  "version": "1.0",
  "description": "An extension for interacting with the Artifact API",
  "permissions": [
    "storage",
    "activeTab",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://api-staging-0.gotartifact.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}
